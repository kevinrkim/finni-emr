<h1>Patients#index</h1>
<p>Find me in app/views/patients/index.html.erb</p>

<table id="patients-datatable" class="table table-striped table-sm">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Status</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
        </tr>
    </thead>
    <tbody>
        <% @patients.each do |patient| %>
            <tr>
                <td><%= patient.first_name %></td>
                <td><%= patient.middle_name %></td>
                <td><%= patient.last_name %></td>
                <td><%= patient.date_of_birth.strftime("%m/%d/%Y") %></td>
                <td><%= patient.status %></td>
                <td><%= patient.address %></td>
                <td><%= patient.city %></td>
                <td><%= patient.state %></td>
                <td><%= patient.zip_code %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<script>
    $(function() {
        var oTable = $("#patients-datatable").dataTable({});
    });
</script>